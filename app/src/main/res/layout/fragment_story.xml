<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".StoryFragment">




    <TextView
        android:id="@+id/today_story_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="스토리"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/today_story_sort_layout"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/today_story_t1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_ripple"
            android:layout_height="35dp"
            android:id="@+id/sort_newest"
            android:layout_marginRight="10dp"
            android:text="최신"></Button>


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:layout_height="35dp"
            android:id="@+id/sort_hottest"
            android:text="인기"></Button>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/today_story_sort_layout"
        android:id="@+id/story_recycler"
        android:layout_height="match_parent"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:id="@+id/story_notice"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        >
    </TextView>
</RelativeLayout>