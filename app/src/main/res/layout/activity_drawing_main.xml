<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/drawing_main_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/drawing_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#eeeeee">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageButton
                    android:id="@+id/drawing_main_more"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/more_btn">
                </ImageButton>


                <ImageButton
                    android:id="@+id/drawing_main_favorite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@id/drawing_main_more"
                    android:background="@null"
                    android:src="@drawable/favorite_none">
                </ImageButton>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/drawing_main_appbar"
        app:umanoDragView="@id/dragview"
        android:gravity="bottom"
        app:umanoPanelHeight="60dp"
        app:umanoShadowHeight="0dp"
        app:umanoClipPanel="false"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        tools:context=".DrawingMainActivity">


        <ImageView
            android:id="@+id/drawing_main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_sqare"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
            android:id="@+id/drawing_main_like_imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:src="@drawable/avd_instargram_like"
            app:layout_constraintBottom_toBottomOf="@+id/drawing_main_image"
            app:layout_constraintEnd_toEndOf="@+id/drawing_main_image"
            app:layout_constraintStart_toStartOf="@+id/drawing_main_image"
            app:layout_constraintTop_toTopOf="@+id/drawing_main_image" />


        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/drawing_main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            app:colorClickableText="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drawing_main_image"
            app:showTrimExpandedText="false"
            app:trimLength="100"
            tools:text="Title" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/darwing_main_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/circle_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drawing_main_content" />

        <TextView
            android:id="@+id/drawing_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawing_main_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="작가 이름"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/darwing_main_profile_image"
            app:layout_constraintStart_toEndOf="@+id/darwing_main_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/drawing_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dragview"
        android:clickable="true"
        android:focusable="false"
        android:background="#eeeeee"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="좋아하는 사람"
                android:id="@+id/drawing_slide_favorite_count"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#000000"
                android:drawableTop="@drawable/favorite">
            </TextView>

    </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>