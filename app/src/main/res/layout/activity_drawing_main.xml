<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".DrawingMainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/drawing_main_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/drawing_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageButton
                    android:id="@+id/drawing_main_more"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/more_btn">

                </ImageButton>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/drawing_main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_sqare"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/drawing_main_appbar"></ImageView>

    <ImageView
        android:id="@+id/drawing_main_like_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0"
        android:src="@drawable/avd_instargram_like"
        app:layout_constraintBottom_toBottomOf="@+id/drawing_main_image"
        app:layout_constraintEnd_toEndOf="@+id/drawing_main_image"
        app:layout_constraintStart_toStartOf="@+id/drawing_main_image"
        app:layout_constraintTop_toTopOf="@+id/drawing_main_image" />


    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/drawing_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        app:colorClickableText="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawing_main_image"
        app:showTrimExpandedText="false"
        app:trimLength="100"
        tools:text="Title" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/darwing_main_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/circle_blue"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawing_content" />

    <TextView
        android:id="@+id/drawing_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawing_main_image"
        android:layout_centerHorizontal="true"
        android:text="작가 이름"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/darwing_main_profile_image"
        app:layout_constraintStart_toEndOf="@+id/darwing_main_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/drawing_content" />
</androidx.constraintlayout.widget.ConstraintLayout>