<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    tools:context=".TodayGoalFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 주제"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/today_goal_t1">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가로등 밑에서 비를 맞고 있는 사람"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:drawableRight="@drawable/format_right"
        android:drawableLeft="@drawable/format_left"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/today_goal_t1"
        android:layout_centerHorizontal="true"
        android:id="@+id/today_goal_realGoal">
    </TextView>





</RelativeLayout>