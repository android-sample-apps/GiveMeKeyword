<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:background="#ffffff"
    tools:context=".TodayGoalFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/today_goal_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="그림"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>

    <ImageButton
        android:id="@+id/today_goal_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        android:src="@drawable/send"></ImageButton>

    <ImageButton
        android:id="@+id/today_goal_draw_utility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/today_goal_send"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/draw_utility"></ImageButton>

    <ImageButton
        android:id="@+id/today_goal_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/today_goal_draw_utility"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        android:src="@drawable/comment_selected"></ImageButton>


    <RelativeLayout
        android:id="@+id/today_goal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/today_goal_t1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:background="@drawable/shape_sqare"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/today_goal_layout_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="오늘의 주제"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <ImageButton
            android:id="@+id/today_goal_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/goal_refresh">

        </ImageButton>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_goal_layout_t1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/today_goal_realGoal_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/today_goal_realGoal"
                android:layout_centerVertical="true"
                android:src="@drawable/format_left"></ImageView>

            <TextView
                android:id="@+id/today_goal_realGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/today_goal_realGoal_img"
                android:gravity="center"
                android:maxWidth="240dp"
                android:text="가로등 밑에서 비를 맞고 있는 사람"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/today_goal_realGoal"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/today_goal_realGoal"
                android:src="@drawable/format_right">

            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/today_paint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/today_goal_t1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:background="@drawable/shape_sqare"
        android:elevation="4dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/today_goal_draw_brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/brush_selected">

        </ImageButton>

        <ImageButton
            android:id="@+id/today_goal_draw_eraser"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/today_goal_draw_brush"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/eraser"></ImageButton>

        <ImageButton
            android:id="@+id/today_goal_draw_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/delete_selector"></ImageButton>

        <ImageButton
            android:id="@+id/today_goal_draw_redo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/today_goal_draw_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/redo_selector"></ImageButton>

        <ImageButton
            android:id="@+id/today_goal_draw_undo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/today_goal_draw_redo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/undo_selector"></ImageButton>

        <View
            android:id="@+id/today_goal_draw_v1"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/today_goal_draw_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee"></View>


        <HorizontalScrollView
            android:id="@+id/today_goal_draw_color_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_goal_draw_v1"
            android:scrollbars="none"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/today_goal_draw_color_black"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:src="@drawable/circle_black"></ImageView>

                <ImageView
                    android:id="@+id/today_goal_draw_color_blue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:src="@drawable/circle_blue"></ImageView>
                <ImageView
                    android:id="@+id/today_goal_draw_color_green"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:src="@drawable/circle_green"></ImageView>
                <ImageView
                    android:id="@+id/today_goal_draw_color_pink"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:src="@drawable/circle_pink"></ImageView>


                <ImageView
                    android:id="@+id/today_goal_draw_color_red"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:src="@drawable/circle_red"></ImageView>

                <ImageView
                    android:id="@+id/today_goal_draw_color_yellow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:src="@drawable/circle_yellow"></ImageView>

                <ImageView
                    android:id="@+id/today_goal_draw_color_darkBlue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:src="@drawable/circle_dark_blue"></ImageView>

                <ImageView
                    android:id="@+id/today_goal_draw_color_darkGreen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:src="@drawable/circle_darkgreen"></ImageView>

                <ImageView
                    android:id="@+id/today_goal_draw_color_wood"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:src="@drawable/circle_wood"></ImageView>
            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/today_goal_draw_v2"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/today_goal_draw_color_scrollview"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee"></View>

        <TextView
            android:id="@+id/today_goal_draw_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_goal_draw_v2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="투명도"
            android:textColor="@color/colorPrimary"></TextView>

        <SeekBar
            android:id="@+id/today_goal_draw_alpha_SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/today_goal_draw_t1"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/today_goal_draw_t1"
            android:max="100"
            android:progress="100">

        </SeekBar>

        <View
            android:id="@+id/today_goal_draw_v3"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/today_goal_draw_alpha_SeekBar"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee">

        </View>

        <TextView
            android:id="@+id/today_goal_draw_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_goal_draw_v3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="크기"
            android:textColor="@color/colorPrimary"></TextView>

        <SeekBar
            android:id="@+id/today_goal_draw_size_SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/today_goal_draw_alpha_SeekBar"
            android:layout_alignTop="@id/today_goal_draw_t2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/today_goal_draw_t2"
            android:max="50"
            android:progress="10">

        </SeekBar>

    </RelativeLayout>

    <TextView
        android:id="@+id/today_goal_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="그림을 그려보세요"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:textStyle="bold">

    </TextView>

<!--    <com.divyanshu.draw.widget.DrawView-->
<!--        android:id="@+id/draw_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@id/today_goal_t1"-->
<!--        android:layout_margin="7dp" />-->

        <com.simplify.ink.InkView
            android:id="@+id/draw_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/today_goal_t1"
            android:layout_margin="7dp" />


</RelativeLayout>